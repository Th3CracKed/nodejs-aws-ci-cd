{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "ME",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "integration-test": "npx jest --forceExit --config=jest.integration.config.js",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npx jest --forceExit --coverage --verbose --watch",
        "watch-test-noCoverage": "npx jest --forceExit --verbose --watch",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint --project . --force",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "test:ci": "jest --forceExit --coverage --verbose",
        "tslint:ci": "tslint -t json -o coverage/linter-report.json --project . --force"
    },
    "dependencies": {
        "@types/shelljs": "^0.8.6",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.8",
        "concurrently": "^5.0.0",
        "jest": "^24.9.0",
        "jest-sonar-reporter": "^2.0.0",
        "nodemon": "^1.19.2",
        "shelljs": "^0.8.3",
        "sonarqube-scanner": "^2.5.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.1",
        "typescript": "^3.6.3"
    },
    "jest": {
        "testResultsProcessor": "jest-sonar-reporter"
    },
    "jestSonar": {
        "reportPath": "coverage/sonarqube",
        "reportFile": "report.xml",
        "indent": 4
    }
}